{
    "name": "intelligent-it/paypal-currency-converter-pro",
    "description": "Convert any currency to allowed PayPal currencies for PayPal's Payment Gateway within WooCommerce",
    "type": "wordpress-plugin",
    "license": "proprietary",
    "authors": [
        {
            "name": "Intelligent-IT",
            "email": "henry.krupp@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.0",
        "ext-curl": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0",
        "squizlabs/php_codesniffer": "^3.5",
        "wp-coding-standards/wpcs": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "PPCC\\": "includes/"
        }
    },
    "scripts": {
        "phpcs": "phpcs --standard=WordPress",
        "phpcbf": "phpcbf --standard=WordPress",
        "test": "phpunit"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}